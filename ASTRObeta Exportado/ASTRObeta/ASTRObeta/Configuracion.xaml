        <TextBox x:Name="iddcc" HorizontalAlignment="Left" Height="30" Margin="124,425,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="174" Background="#FF4B5BBF" BorderBrush="White" Foreground="White" SelectionBrush="{x:Null}" Grid.ColumnSpan="2" Grid.Column="1" FontFamily="Agency FB" FontSize="21.333"/>
        <Button Content="AYUDA" HorizontalAlignment="Left" Height="30" Margin="173,425,0,0" VerticalAlignment="Top" Width="80" FontFamily="/ASTRObeta;component/Fonts/#Gill Sans Nova Cond Lt" FontSize="21.333" Background="#FF346CFF" Foreground="White" BorderBrush="{x:Null}" Grid.Column="2"/>
        <Button x:Name="btnguardar"  Content="GUARDAR" HorizontalAlignment="Left" Height="48" Margin="141,480,0,0" VerticalAlignment="Top" Width="125" FontFamily="/ASTRObeta;component/Fonts/#Gill Sans Nova Cond Lt" FontSize="32" Background="#FF346CFF" Foreground="White" BorderBrush="{x:Null}" Click="btnguardar_Click" Grid.Column="2"/>
