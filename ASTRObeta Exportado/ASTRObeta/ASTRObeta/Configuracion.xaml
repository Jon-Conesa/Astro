        <Label Content="GENERAL" HorizontalAlignment="Left" Height="49" Margin="10,107,0,0" VerticalAlignment="Top" Width="101" FontFamily="/ASTRObeta;component/Fonts/#Gill Sans Nova Cond Lt" FontSize="32" Foreground="White" Grid.ColumnSpan="2"/>
