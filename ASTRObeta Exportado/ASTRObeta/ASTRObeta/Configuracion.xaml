        <TextBox x:Name="tbn" HorizontalAlignment="Left" Height="30" Margin="65,160,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="174" Background="#FF4B5BBF" BorderBrush="White" Foreground="White" SelectionBrush="{x:Null}" Grid.ColumnSpan="2" Grid.Column="1" FontFamily="Agency FB" FontSize="21.333"/>
