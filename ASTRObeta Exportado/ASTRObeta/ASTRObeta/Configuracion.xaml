        <Label Content="Password :" HorizontalAlignment="Left" Height="49" Margin="10,312,0,0" VerticalAlignment="Top" Width="86" FontFamily="/ASTRObeta;component/Fonts/#Gill Sans Nova Cond Lt" FontSize="21.333" Foreground="White" Grid.ColumnSpan="2"/>
