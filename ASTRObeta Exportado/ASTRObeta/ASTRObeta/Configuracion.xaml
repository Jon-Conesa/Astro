            <ColumnDefinition Width="17*"/>
            <ColumnDefinition Width="143*"/>
            <ColumnDefinition Width="289*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition Height="0*"/>
        </Grid.RowDefinitions>
        <Rectangle Fill="#FF0B1F64" HorizontalAlignment="Left" Height="531" Margin="0,10,0,0" RadiusY="13.515" RadiusX="13.515" Stroke="White" VerticalAlignment="Top" Width="449" Grid.ColumnSpan="3"/>
